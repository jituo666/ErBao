<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fgContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/firstPage"
            style="@style/style_menu_item"
            android:drawableTop="@drawable/main_menu_item_sy"
            android:text="@string/fragment_first_page" />

        <TextView
            android:id="@+id/myRecord"
            style="@style/style_menu_item"
            android:drawableTop="@drawable/main_menu_item_record"
            android:text="@string/fragment_my_record" />

        <TextView
            android:id="@+id/myClassroom"
            style="@style/style_menu_item"
            android:drawableTop="@drawable/main_menu_item_classroom"
            android:text="@string/fragment_my_classroom" />

        <TextView
            android:id="@+id/myCenter"
            style="@style/style_menu_item"
            android:drawableTop="@drawable/main_menu_item_mine"
            android:text="@string/fragment_my_center" />
    </LinearLayout>
</LinearLayout>
