<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="@android:color/white"
    android:minHeight="85dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@android:color/white"
        android:minHeight="84dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="72dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:scaleType="fitXY"
            android:src="@drawable/knowlege_sample" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/knowledge_title"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="元旦起全面实施二胎相关政策"
                android:textColor="#1c1c1c"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/knowledge_summary"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|top"
                android:text="故事要从1946年说起，那是一个五月，初夏的延安应当是草木葱翠"
                android:textColor="#999999"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/knowledge_marks"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="right">

                <TextView
                    android:id="@+id/knowledge_marks_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="32dp"
                    android:drawableLeft="@drawable/ic_eyes"
                    android:drawablePadding="4dp"
                    android:gravity="left|center_vertical"
                    android:text="1021"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/knowledge_marks_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/knowledge_marks_eye"
                    android:drawableLeft="@drawable/ic_fav_it"
                    android:drawablePadding="4dp"
                    android:gravity="left|center_vertical"
                    android:text="258"
                    android:textSize="10dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/knowledge_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f0f0f0"
        android:visibility="invisible" />
</LinearLayout>
