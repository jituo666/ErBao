<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="weekName">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#cccccc</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="style_record_items_0">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">@color/calendar_bar_text_color</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="style_menu_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:textColor">#787878</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="style_toolbox_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">#7b808a</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="style_record_items_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">@color/calendar_bar_text_color</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="style_record_tip_2">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">6dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="style_record_tip_3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
